@model IEnumerable<Aluno>
@{
    ViewData["Title"] = "Tabela de Alunos";
    var tipoBuscaAtual = (ViewBag.TipoBusca as string) ?? "matricula";
    var termoBusca = ViewBag.TermoBusca as string ?? string.Empty;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0 fw-bold">Tabela de Alunos</h1>
    <a class="btn btn-blue" asp-controller="Home" asp-action="Relatorio">Emitir relatório</a>
</div>

<section class="section-panel filter-panel mb-4">
    <div class="card-body filter-panel__body">
        <form method="get" class="row g-3">
            <div class="col-md-12 mb-2">
                <label class="form-label mb-2 fw-semibold">Opção de busca:</label>
                <div class="d-flex gap-4">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="tipoBusca" id="radioMatricula" value="matricula" @(tipoBuscaAtual == "matricula" ? "checked" : "")>
                        <label class="form-check-label" for="radioMatricula">Matrícula</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="tipoBusca" id="radioNome" value="nome" @(tipoBuscaAtual == "nome" ? "checked" : "")>
                        <label class="form-check-label" for="radioNome">Nome</label>
                    </div>
                </div>
            </div>
            <div class="col-md-9">
                <label class="form-label mb-1 fw-semibold" for="busca">Buscar</label>
                <input type="text" class="form-control" id="busca" name="busca" value="@termoBusca" placeholder="Matrícula ou nome do aluno..." />
            </div>
            <div class="col-md-3 d-flex align-items-end">
                <button type="submit" class="btn btn-accent w-100">Buscar</button>
            </div>
        </form>
    </div>
</section>

<div class="table-container-wrapper">
<section class="section-panel table-panel mb-0">
    <div class="card-body table-panel__content">
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th>Matrícula</th>
                        <th>Nome</th>
                        <th>Sexo</th>
                        <th>Data de nascimento</th>
                        <th>CPF</th>
                        <th class="text-end">Opções</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var aluno in Model)
                    {
                        <tr>
                            <td>@aluno.Matricula</td>
                            <td>@aluno.NomeCompleto</td>
                            <td>@aluno.Genero</td>
                            <td>@aluno.DataNascimento.ToString("dd/MM/yyyy")</td>
                            <td>@(string.IsNullOrWhiteSpace(aluno.CPF) ? "-" : aluno.CPF)</td>
                            <td class="text-end">
                                <a class="btn-edit-small me-3" asp-controller="AdministracaoAluno" asp-action="Cadastro" asp-route-id="@aluno.Id">Editar</a>
                                <form method="post" asp-controller="AdministracaoAluno" asp-action="Excluir" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@aluno.Id" />
                                    <button type="submit" class="btn-link-delete" onclick="return confirm('Confirma a exclusão deste aluno?');">Excluir</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
</div>
