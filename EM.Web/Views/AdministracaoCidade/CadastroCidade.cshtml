@model Cidade
@{
    var isEdicao = (ViewBag.IsEdicao as bool?) ?? false;
    ViewData["Title"] = isEdicao ? "Edição de cidade" : "Adicionar cidade";
}

<div class="card shadow-sm">
    <div class="card-body">
        <div class="mb-3">
            <h1 class="h4 mb-1">@ViewData["Title"]</h1>
            <p class="text-muted mb-0">Mantenha o cadastro de cidades atualizado com nome e UF corretos.</p>
        </div>

        <form method="post" class="row g-3">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-2" role="alert"></div>

            <div class="col-md-8">
                <label asp-for="Nome" class="form-label">Nome da cidade</label>
                <input asp-for="Nome" class="form-control" placeholder="Digite o nome da cidade" />
                <span asp-validation-for="Nome" class="text-danger small"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="Estado" class="form-label">UF</label>
                <input asp-for="Estado" class="form-control text-uppercase" maxlength="2" oninput="this.value = this.value.toUpperCase();" placeholder="RJ" />
                <span asp-validation-for="Estado" class="text-danger small"></span>
            </div>

            <div class="col-12 d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-accent">Voltar</a>
                <button type="submit" class="btn btn-accent">Salvar</button>
            </div>
        </form>
    </div>
</div>

